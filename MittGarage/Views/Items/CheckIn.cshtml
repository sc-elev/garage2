@model MittGarage.Models.VehicleCtx

@{
    ViewBag.Title = "Check in";
}
<h2>Check in</h2>
<p>
    @{
        var today = DateTime.Now;
    }
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <fieldset>
        <legend>Vehicle</legend>

        <input type="hidden" id="Inchecked." value="@today" />

        <div class="editor-label">
            @Html.LabelFor(model => model.RegNr)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RegNr)
            @Html.ValidationMessageFor(model => model.RegNr)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Owner)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Owner)
            @Html.ValidationMessageFor(model => model.Owner)
        </div>

        <p>
            <input type="submit" value="Checka in" class="btn btn-lg btn-primary" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
