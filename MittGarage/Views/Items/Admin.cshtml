@*@model MittGarage.Models.GarageItem*@

@{
    ViewBag.Title = "Admininistration";
}

<h2>Administration</h2>



@using (Html.BeginForm()) {

    <table>
        <tr>
            <td>
                <input type="text" name="SearchOption"/>
            </td>
            <td>
                Registreringsnummer/ägare
            </td>
        </tr>
        <tr>
            <td>
             <select name="SearchType" >
                <option value="*">Alla</option>
                <option value="bus">Buss</option>
                <option value="plane">Flygplan</option>
                <option value="mc">Motorcykel</option>
                <option value="boat">Båt</option>
                <option value="car">Bil</option>
                </select>
            </td>
            <td>
                Bilmärke
            </td>
        </tr>
        <tr>
            <td>
                <input type="checkbox" name="SearchToday" />
            </td>
            <td>
                Enbart dagens bilar
            </td>
        </tr>

    </table>
    <input type="submit" value="Sök"/>
}
